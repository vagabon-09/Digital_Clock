<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DigitalClock" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="customMode" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textColor">@color/black</item>
        <item name="tint">@color/black</item>
    </style>

    <style name="orangeMode" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textColor">@color/orange</item>
        <item name="tint">@color/orange</item>
        <item name="android:windowBackground">@color/black</item>
    </style>


    <style name="NightBat" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="tint">@color/teal_200</item>
        <item name="android:windowBackground">@color/teal_700</item>
        <item name="android:spinnerDropDownItemStyle">@style/MySpinnerDropdownItemStyle</item>
    </style>

    <style name="MySpinnerDropdownItemStyle">
        <item name="android:background">@color/teal_700</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="night_bat">
        <item name="android:background">@drawable/button_shape</item>
    </style>
</resources>